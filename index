    <script>
        // --- Fun√ß√µes de Formata√ß√£o ---
        const formatPercent = (value) => `${(value * 100).toFixed(1)}%`;
        const formatCurrency = (value) => new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(value);

        // --- Fun√ß√£o Principal de C√°lculo ---
        function calcularTudo() {
            // --- 1. Obter valores dos inputs ---
            const salarioBase = parseFloat(document.getElementById('salario-base').value) || 0;
            const realizadoEbitda = parseFloat(document.getElementById('realizado-ebitda').value) / 100;
            const realizadoRuptura = parseFloat(document.getElementById('realizado-ruptura').value) / 100;
            const realizadoServico = parseFloat(document.getElementById('realizado-servico').value) / 100;
            const realizadoProdutividade = parseFloat(document.getElementById('realizado-produtividade').value);

            // --- 2. Obter valores das metas (CORRIGIDO) ---
            const metaEbitdaText = document.getElementById('meta-ebitda').innerText;
            const metaRupturaText = document.getElementById('meta-ruptura').innerText;
            const metaServicoText = document.getElementById('meta-servico').innerText;

            const metaEbitda = parseFloat(metaEbitdaText.replace(',', '.')) / 100;
            const metaRuptura = parseFloat(metaRupturaText.replace(',', '.')) / 100;
            const metaServico = parseFloat(metaServicoText.replace(',', '.')) / 100;
            const metaProdutividade = parseFloat(document.getElementById('meta-produtividade').innerText);
            
            // --- 3. Calcular o "Atingimento" para cada indicador ---
            const atingimentoEbitda = realizadoEbitda / metaEbitda;
            const atingimentoServico = realizadoServico / metaServico;
            const atingimentoProdutividade = realizadoProdutividade / metaProdutividade;
            const atingimentoRuptura = metaRuptura / realizadoRuptura; // L√≥gica invertida: menor √© melhor

            // --- 4. Atualizar os campos de "Atingimento" na tela ---
            document.getElementById('atingimento-ebitda').innerText = formatPercent(atingimentoEbitda);
            document.getElementById('atingimento-ruptura').innerText = formatPercent(atingimentoRuptura);
            document.getElementById('atingimento-servico').innerText = formatPercent(atingimentoServico);
            document.getElementById('atingimento-produtividade').innerText = formatPercent(atingimentoProdutividade);

            // --- 5. Calcular o b√¥nus (% Sal√°rio) dinamicamente ---
            const bonusAlvoEbitda = 0.15;
            const bonusAlvoRuptura = 0.105;
            const bonusAlvoServico = 0.075;
            const bonusAlvoProdutividade = 0.095;

            const salarioEbitda = atingimentoEbitda * bonusAlvoEbitda;
            const salarioRuptura = atingimentoRuptura * bonusAlvoRuptura;
            const salarioServico = atingimentoServico * bonusAlvoServico;
            const salarioProdutividade = atingimentoProdutividade * bonusAlvoProdutividade;
            
            // --- 6. Atualizar os campos de "% Sal√°rio" na tela ---
            document.getElementById('salario-ebitda').innerText = formatPercent(salarioEbitda);
            document.getElementById('salario-ruptura').innerText = formatPercent(salarioRuptura);
            document.getElementById('salario-servico').innerText = formatPercent(salarioServico);
            document.getElementById('salario-produtividade').innerText = formatPercent(salarioProdutividade);

            // --- 7. Calcular o resultado final ---
            const totalSalarioPercent = salarioEbitda + salarioRuptura + salarioServico + salarioProdutividade;
            const percentualFinalReceber = totalSalarioPercent * 0.60;
            const valorFinalPPR = salarioBase * percentualFinalReceber;

            // --- 8. Atualizar o card de resumo ---
            document.getElementById('total-salario').innerText = formatPercent(totalSalarioPercent);
            document.getElementById('percentual-final').innerText = formatPercent(percentualFinalReceber);
            document.getElementById('valor-final-ppr').innerText = formatCurrency(valorFinalPPR);
        }

        // --- 9. Adicionar "escutadores" de eventos ---
        const inputs = document.querySelectorAll('input[type="number"]');
        inputs.forEach(input => {
            input.addEventListener('input', calcularTudo);
        });

        // Chama a fun√ß√£o uma vez no in√≠cio para garantir que os valores estejam corretos
        window.onload = calcularTudo;
    </script>

